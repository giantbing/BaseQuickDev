<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alfa">
    <android.support.v4.view.ViewPager
        android:id="@+id/textinnerPager"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:clipChildren="false"
        android:background="@color/black"/>
    <RelativeLayout
        android:layout_below="@id/textinnerPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/text_pager_back"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_pager_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/defaulttext"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:textColor="@color/textpager"
            android:textSize="30sp"/>
        <com.zonlinks.giantbing.guangzhouboard.View.VerticalScrollTextView
            android:id="@+id/text_pager_content"
            android:layout_below="@id/text_pager_title"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:maxLines="20"
            android:scrollbars="vertical" />
        <TextView
            android:layout_below="@id/text_pager_content"
            android:id="@+id/text_pager_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="@string/defaulttext"
            android:textColor="@color/black"
            android:textSize="12sp"/>
    </RelativeLayout>
</RelativeLayout>
